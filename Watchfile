#watcher "stylesheet", extensions: [".styl", ".less", ".sass", ".css"]
File  = require('pathfinder').File

require("./extensions/watchfile")()

#require("../../spec/stylesheetExtension")
require("design.io-stylesheets")
  compress: true
  ignore: /ano/
  #outputPath: (path) ->
  #  "spec/tmp/test.css"
